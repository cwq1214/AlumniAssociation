<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >
<View
    android:background="@color/borderColor"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
    <RadioGroup
        android:id="@+id/rg"
        android:background="@color/itemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
    >
        <RadioButton
            android:id="@+id/btn_main_home"
            android:checked="true"
            android:textColor="@drawable/sel_btn_tcolor_main"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="首页"
            android:drawableTop="@drawable/sel_btn_bg_main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/btn_main_bbs"
            android:textColor="@drawable/sel_btn_tcolor_main"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="论坛"
            android:drawableTop="@drawable/sel_btn_bg_main_bbs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/btn_main_class"
            android:textColor="@drawable/sel_btn_tcolor_main"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="班级"
            android:drawableTop="@drawable/sel_btn_bg_main_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/btn_main_personal"
            android:textColor="@drawable/sel_btn_tcolor_main"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="个人"
            android:drawableTop="@drawable/sel_btn_bg_main_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>
    <View
        android:background="@color/borderColor"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>