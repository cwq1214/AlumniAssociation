        android:theme="@style/AppTheme"
        android:name=".base.AlmAsoApp"
        >
        <activity android:name=".ui.activity.MainActivity" android:screenOrientation="portrait" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.LoginActivity" android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ui.activity.PersonalInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.ModifyPsdActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.ClassDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.SendClassMessageActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.UploadImgActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.BrowseImgActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.NewsDetailActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.SendPostActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.ApplyJoinClassListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.activity.CreateClassActivity" android:screenOrientation="portrait"/>
